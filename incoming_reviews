[dashboard]
  title = TF-A Incoming Reviews
  description = Helper dashboard for tracking progress of incoming reviews for TF-A
  foreach = project:TF-A/trusted-firmware-a is:open -is:draft -is:wip

[section "Pending +1"]
  query = -label:Code-Review=1 -label:Code-Review=2 -label:Code-Review=-1 -label:Code-Review=-2 branch:integration

[section "Pending +2"]
  query = label:Code-Review=1 -label:Code-Review=2 -label:Code-Review=-1 -label:Code-Review=-2 branch:integration

[section "-1/-2: waiting for rework"]
  query = label:Code-Review<=-1 branch:integration

[section "Pending merge"]
  query = label:Code-Review=2 -label:Code-Review=-1 branch:integration

[section "Targeted against master: retarget against integration"]
  query = branch:master
