[dashboard]
  title = TF-A Incoming Reviews
  description = Helper dashboard for tracking progress of incoming reviews for TF-A
  foreach = project:TF-A/trusted-firmware-a is:open -is:draft -is:wip

[section "Pending code owner review"]
  query = label:Code-Owner-Review=need

[section "Pending maintainer review"]
  query = label:Maintainer-Review=need

[section "Waiting for rework"]
  query = (label:Code-Owner-Review=-1 OR label:Maintainer-Review=-1)

[section "Pending merge"]
  query = is:submittable
